doctype html
html
  head
    title Costumes
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
    style.
      body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
        padding: 20px;
      }
      .container {
        max-width: 900px;
        margin: auto;
      }
      .header {
        text-align: center;
        margin-bottom: 40px;
      }
      .header h1 {
        font-size: 2.5rem;
        color: #343a40;
        font-weight: bold;
        margin-bottom: 15px;
      }
      .header p {
        font-size: 1.2rem;
        color: #6c757d;
      }
      .costume-card {
        border: none;
        border-radius: 12px;
        padding: 20px;
        background-color: #fff;
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s, box-shadow 0.2s;
      }
      .costume-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
      }
      .costume-card h5 {
        font-size: 1.5rem;
        color: #007bff;
        margin-bottom: 12px;
        font-weight: bold;
      }
      .costume-card p {
        font-size: 1rem;
        margin-bottom: 10px;
        color: #495057;
      }
      .btn-update {
        background-color: #28a745;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        font-size: 1rem;
        text-align: center;
        transition: background-color 0.3s;
      }
      .btn-update:hover {
        background-color: #218838;
      }

  body
    div.container
      div.header
        h1 Costumes Collection
        p Browse through our latest costume collection!

      div.row
        each costume in costumes
          div.col-md-4
            div.costume-card
              h5 #{costume.costume_type}
              p Size: #{costume.size}
              p Cost: $#{costume.cost}
              button.btn-update(
                onclick=`dispatch('/update?id=${costume._id}')`
              ) Update

    script.
      function dispatch(path) {
        window.location.href = path;
      }
